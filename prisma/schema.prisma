// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  password     String?
  name         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}

model Song {
  id         Int       @id @default(autoincrement())
  name       String
  artist     String
  album      String
  year       String
  genre      String
  duration   String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("songs")
}
